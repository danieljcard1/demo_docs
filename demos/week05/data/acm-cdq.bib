@article{10.1145/3437000.3437002,
author = {Itchuaqiyaq, Cana Uluak and Matheson, Breeanne},
title = {Decolonizing Decoloniality: Considering the (Mis)Use of Decolonial Frameworks in TPC Scholarship},
year = {2021},
issue_date = {March 2021},
publisher = {Association for Computing Machinery},
